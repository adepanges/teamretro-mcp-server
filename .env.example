# Base URL for TeamRetro API
TEAMRETRO_BASE_URL=https://api.teamretro.com

# Authentication (choose one)
TEAMRETRO_AUTH_TYPE=apiKey  # or 'basic' or 'bearer'

# For API Key auth
TEAMRETRO_API_KEY=your_api_key_here

# For Basic auth
# TEAMRETRO_USERNAME=your_username
# TEAMRETRO_PASSWORD=your_password

# For Bearer auth
# TEAMRETRO_TOKEN=your_bearer_token

# Response Format
# TEAMRETRO_RESPONSE_FORMAT=simple  # or 'json'

# Logging Configuration
TEAMRETRO_LOG_ENABLED=true  # default: false
TEAMRETRO_LOG_DIR=./logs  # Custom log directory path
TEAMRETRO_LOG_LEVEL=info   # error, warn, info, debug
TEAMRETRO_LOG_MAX_FILES=30 # Maximum number of log files to keep
