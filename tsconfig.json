{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "rootDirs":  ["src/**/*.ts", "!src/**/*.d.ts", "!**/node_modules/**", "!**/dist/**", "!node_modules", "!dist"],
    "paths": {
      "@types/*": ["src/types/*"],
      "src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
